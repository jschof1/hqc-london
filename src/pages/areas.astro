---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';

// Import area data from JSON file
import areaData from '../data/area-data.json';

// Convert area data to array with slugs for easier rendering
const areas = Object.entries(areaData).map(([slug, data]) => ({
  name: data.name,
  slug: slug,
  image: data.heroImage,
  region: data.region,
  postcodes: data.postcodes,
  description: data.aboutArea.content[0].substring(0, 150) + '...'
}));
