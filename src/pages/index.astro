---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import LandingHeroSection from '../components/LandingHeroSection.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import SpecializedServicesSection from '../components/SpecializedServicesSection.astro';
import DifferentiationSection from '../components/DifferentiationSection.astro';
import AreasServed from '../components/AreasServed.astro';
import FounderStory from '../components/FounderStory.astro';
import ProcessSteps from '../components/ProcessSteps.astro';
import GuaranteeSection from '../components/GuaranteeSection.astro';
import TransformationGallery from '../components/TransformationGallery.astro';
---

<Layout title="High Quality Clean | London's Premier Luxury Home Cleaning Service">
  <Header />
  
  <main class="page-transition pt-16 relative">
	<!-- 1. Hero (Above the Fold) -->
	<div class="hero-transition">
		<LandingHeroSection />
	</div>

	<!-- 2. Social Proof Strip -->
	<TestimonialsSection />
	<!-- 7. Process Transparency -->
	<ProcessSteps />
	<!-- 4. Blue Ocean Differentiation -->
	<DifferentiationSection />
	<!-- 3. Service Tiers -->
	<ServicesSection />
	
	<!-- 3b. Specialized Services -->
	<SpecializedServicesSection />
	
	<!-- 5. Areas We Serve -->
	<AreasServed />
	<!-- 6. Founder Story -->
	<FounderStory />
	<!-- 8. Guarantee Section -->
	<GuaranteeSection />
	<!-- 9. Recent Work / Case Studies -->
	<TransformationGallery />

	<!-- 10. Final CTA -->
	<section
	  id="quote"
	  class="relative py-20 md:py-24 text-white parallax"
	  style="background-image: url('https://images.unsplash.com/photo-1622015663319-e97e697503ee?q=80&w=1600&auto=format&fit=crop'); background-size: cover; background-position: center; background-attachment: fixed;"
	>
	  <div
		class="absolute inset-0 bg-navy/70 backdrop-blur-sm"
		aria-hidden="true"
	  ></div>
	  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="text-center">
		  <h2 class="font-serif text-3xl md:text-5xl font-bold text-gold mb-6">
			Ready for Your Next Clean?
		  </h2>
		  <p class="text-lg text-white/90 max-w-2xl mx-auto mb-8">
			Experience the High Quality Clean difference in your space. Completely bespoke, surface-safe, and designed around your schedule.
		  </p>
		</div>

		<form
		  action="https://api.web3forms.com/submit"
		  method="POST"
		  class="mx-auto max-w-2xl bg-white/10 backdrop-blur border border-white/20 rounded-2xl p-8"
		>
		<input type="hidden" name="access_key" value="7b89af3e-dcb0-44ef-a37a-6e2b3c93d8da">
		  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
			<div>
			  <label for="name" class="block text-sm font-medium text-white mb-2"
				>Name</label
			  >
			  <input
				type="text"
				id="name"
				name="name"
				required
				class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent"
				placeholder="Your full name"
			  />
			</div>
			<div>
			  <label for="email" class="block text-sm font-medium text-white mb-2"
				>Email</label
			  >
			  <input
				type="email"
				id="email"
				name="email"
				required
				class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent"
				placeholder="your.email@example.com"
			  />
			</div>
		  </div>
		  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
			<div>
			  <label for="phone" class="block text-sm font-medium text-white mb-2"
				>Phone</label
			  >
			  <input
				type="tel"
				id="phone"
				name="phone"
				class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent"
				placeholder="Your phone number"
			  />
			</div>
			<div>
			  <label for="postcode" class="block text-sm font-medium text-white mb-2"
				>Postcode</label
			  >
			  <input
				type="text"
				id="postcode"
				name="postcode"
				required
				class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent"
				placeholder="e.g., SW1X 7XL"
			  />
			</div>
		  </div>
		  <div class="mb-6">
			<label for="service" class="block text-sm font-medium text-white mb-2"
			  >Service Interest</label
			>
			<select
			  id="service"
			  name="service"
			  required
			  class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent"
			>
			  <option value="" disabled selected>Choose your service type</option>
			  <option value="essentials">Essentials Clean™</option>
			  <option value="signature">Signature Clean™</option>
			  <option value="wellclean">WellClean™</option>
			  <option value="move-in-out">Move In/Out Reset™</option>
			  <option value="airbnb">Airbnb Turnover</option>
			  <option value="office">Office Clean</option>
			  <option value="other">Other / Not Sure</option>
			</select>
		  </div>
		  <div class="mb-6">
			<label for="message" class="block text-sm font-medium text-white mb-2"
			  >Tell us about your space</label
			>
			<textarea
			  id="message"
			  name="message"
			  rows="4"
			  class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-gold focus:border-transparent resize-none"
			  placeholder="Brief description: property type, rooms, any specific requirements..."
			></textarea>
		  </div>
		  <button
			type="submit"
			class="w-full bg-gold text-navy font-semibold py-4 px-6 rounded-lg hover:bg-gold/90 transition duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
		  >
			Request Your Personalised Quote
		  </button>
		</form>
	  </div>
	</section>
  </main>
</Layout>
