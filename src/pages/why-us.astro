---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import TransformationGallery from '../components/TransformationGallery.astro';
import CTABanner from '../components/CTABanner.astro';
---

<Layout 
  title="Why Us — High Quality Cleaning"
  description="Discover what sets High Quality Cleaning apart. Premium service, trusted professionals, and unmatched attention to detail."
>
  <Header />
  
  <main class="page-transition pt-16">
    <!-- 1. Hero Section -->
    <HeroSection 
      title="Beyond Clean. Total Calm."
      subtitle="Wellness-grade protocols, concierge-level care, and outcomes you feel—every visit, every room."
      imageSrc="/images/luxury-home/Mayfair_penthouse_kitchen_with_beautiful_marble.png"
      imageAlt="Luxurious modern living room with pristine cleaning showcasing elegant furniture and spotless surfaces"
      primaryCta={{
        text: "Get My Quote",
        href: "index.html#quote"
      }}
      secondaryCta={{
        text: "Message on WhatsApp", 
        href: "https://wa.me/07824390336",
        icon: "fab fa-whatsapp",
        target: "_blank",
        rel: "noopener nofollow"
      }}
      trustBadges={[
        { icon: "fas fa-shield-alt", text: "£5M Insurance" },
        { icon: "fas fa-id-card", text: "100% DBS-checked" },
        { icon: "fas fa-star", text: "Five‑Star Average" }
      ]}
      backgroundClass="bg-navy relative overflow-hidden"
    />

    <!-- 2. Proof Bar -->
    <section class="bg-white border-y border-gold/20">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div
            class="rounded-xl bg-navy border border-gold/30 p-6 flex items-center gap-4 shadow-soft-sm"
          >
            <i class="fas fa-gem text-gold text-2xl"></i>
            <div>
              <div class="text-white font-bold text-xl">97%</div>
              <div class="text-sm text-white/80">Client retention</div>
            </div>
          </div>
          <div
            class="rounded-xl bg-navy border border-gold/30 p-6 flex items-center gap-4 shadow-soft-sm"
          >
            <i class="fas fa-shield-alt text-gold text-2xl"></i>
            <div>
              <div class="text-white font-bold text-xl">£5M</div>
              <div class="text-sm text-white/80">Insurance cover</div>
            </div>
          </div>
          <div
            class="rounded-xl bg-navy border border-gold/30 p-6 flex items-center gap-4 shadow-soft-sm"
          >
            <i class="fas fa-clock text-gold text-2xl"></i>
            <div>
              <div class="text-white font-bold text-xl">48h</div>
              <div class="text-sm text-white/80">Avg response</div>
            </div>
          </div>
          <div
            class="rounded-xl bg-navy border border-gold/30 p-6 flex items-center gap-4 shadow-soft-sm"
          >
            <i class="fas fa-user-check text-gold text-2xl"></i>
            <div>
              <div class="text-white font-bold text-xl">100%</div>
              <div class="text-sm text-white/80">DBS‑checked staff</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 7. Trusted by Leading Brands -->
    <section class="py-24 md:py-32 bg-navy">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="font-serif text-3xl md:text-4xl text-white mb-4">
          Trusted by Leading Brands
        </h2>
        <p class="text-white/80 text-lg mb-12 max-w-2xl">
          We're proud to serve some of London's most prestigious businesses and property agencies.
        </p>

        <!-- Carousel Container -->
        <div class="relative overflow-hidden">
          <div class="carousel-track flex gap-8 animate-scroll">
            <!-- Chesterton -->
            <div class="bg-white rounded-xl p-8 text-center flex-shrink-0 w-80">
              <div class="mb-6">
                <img src="/images/brand-logos/chestertons.webp" 
                     alt="Chesterton logo" 
                     class="mx-auto h-25 w-auto object-contain"
                     style="height: 80px; width: 240px;">
              </div>
              <h4 class="font-serif text-lg text-navy mb-4">Chesterton</h4>
              <p class="text-gray-700 text-sm">
                As a leading international property agency, Chesterton demands the highest standards in every aspect of their business, including cleanliness. We're proud to meet their high expectations.
              </p>
            </div>

            <!-- Young Guns -->
            <div class="bg-white rounded-xl p-8 text-center flex-shrink-0 w-80">
              <div class="mb-6">
                <img src="/images/brand-logos/young-guns.webp " 
                     alt="Young Guns logo" 
                     class="mx-auto h-25 w-auto object-contain"
                     style="height: 80px; width: 240px;">
              </div>
              <h4 class="font-serif text-lg text-navy mb-4">Young Guns</h4>
              <p class="text-gray-700 text-sm">
                Young Guns, a network that champions young creative talent, believes in creating an environment that fuels creativity. We assist them by providing a clean and vibrant workspace.
              </p>
            </div>

            <!-- Marsh and Parsons -->
            <div class="bg-white rounded-xl p-8 text-center flex-shrink-0 w-80">
              <div class="mb-6">
                <img src="/images/brand-logos/Marsh-and-Parsons.webp" 
                     alt="Marsh and Parsons logo" 
                     class="mx-auto h-25 w-auto object-contain"
                     style="height: 80px; width: 240px;">
              </div>
              <h4 class="font-serif text-lg text-navy mb-4">Marsh and Parsons</h4>
              <p class="text-gray-700 text-sm">
                Renowned for their excellent service in the real estate sector, Marsh and Parsons require a cleaning service that matches their reputation. We rise to the challenge.
              </p>
            </div>

            <!-- Søstrene Grene -->
            <div class="bg-white rounded-xl p-8 text-center flex-shrink-0 w-80">
              <div class="mb-6">
                <img src="/images/brand-logos/Sostrene-Grene.png" 
                     alt="Søstrene Grene logo" 
                     class="mx-auto h-25 w-auto object-contain"
                     style="height: 80px; width: 240px;">
              </div>
              <h4 class="font-serif text-lg text-navy mb-4">Søstrene Grene</h4>
              <p class="text-gray-700 text-sm">
                A Danish retail chain known for their cosy, quality merchandise. We help maintain the welcoming atmosphere of their stores with our comprehensive cleaning services.
              </p>
            </div>

            <!-- Generate UK -->
            <div class="bg-white rounded-xl p-8 text-center flex-shrink-0 w-80">
              <div class="mb-6">
                <img src="/images/brand-logos/Generate-UK.png" 
                     alt="Generate UK logo" 
                     class="mx-auto h-25 w-auto object-contain"
                     style="height: 80px; width: 240px;">
              </div>
              <h4 class="font-serif text-lg text-navy mb-4">Generate UK</h4>
              <p class="text-gray-700 text-sm">
                Generate work together with people with a learning disability, autism and other disabilities to have better lives and connect to the community as equal citizens.
              </p>
            </div>

            <!-- London Lux Property -->
            <div class="bg-white rounded-xl p-8 text-center flex-shrink-0 w-80">
              <div class="mb-6">
                <img src="/images/brand-logos/Lux.webp" 
                     alt="London Lux Property logo" 
                     class="mx-auto h-25 w-auto object-contain"
                     style="height: 80px; width: 240px;">
              </div>
              <h4 class="font-serif text-lg text-navy mb-4">London Lux Property</h4>
              <p class="text-gray-700 text-sm">
                London Luxury Property, are a modern boutique agency specialising in the investment, sales, management and rental of real estate in Prime Central London.
              </p>
            </div>

            <!-- Duplicate items for seamless loop -->
            <div class="bg-white rounded-xl p-8 text-center flex-shrink-0 w-80">
              <div class="mb-6">
                <img src="/images/brand-logos/chestertons.webp" 
                     alt="Chesterton logo" 
                     class="mx-auto h-25 w-auto object-contain"
                     style="height: 80px; width: 240px;">
              </div>
              <h4 class="font-serif text-lg text-navy mb-4">Chesterton</h4>
              <p class="text-gray-700 text-sm">
                As a leading international property agency, Chesterton demands the highest standards in every aspect of their business, including cleanliness. We're proud to meet their high expectations.
              </p>
            </div>

            <div class="bg-white rounded-xl p-8 text-center flex-shrink-0 w-80">
              <div class="mb-6">
                <img src="/images/brand-logos/young-guns.webp" 
                     alt="Young Guns logo" 
                     class="mx-auto h-25 w-auto object-contain"
                     style="height: 80px; width: 240px;">
              </div>
              <h4 class="font-serif text-lg text-navy mb-4">Young Guns</h4>
              <p class="text-gray-700 text-sm">
                Young Guns, a network that champions young creative talent, believes in creating an environment that fuels creativity. We assist them by providing a clean and vibrant workspace.
              </p>
            </div>
          </div>
        </div>

        <style>
          @keyframes scroll {
            0% {
              transform: translateX(0);
            }
            100% {
              transform: translateX(-50%);
            }
          }
          
          .animate-scroll {
            animation: scroll 30s linear infinite;
          }
          
          .carousel-track:hover {
            animation-play-state: paused;
          }
        </style>
      </div>
    </section>


    <!-- 3. Unique Differentiators -->
    <section class="relative overflow-hidden">
        
        <!-- Block 1: Wellness Protocols - Dark Navy -->
        <div class="py-16 md:py-20 bg-navy relative">
          <div class="absolute inset-0 bg-gradient-to-br from-navy via-navy to-night opacity-90"></div>
          <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-8 lg:gap-12 items-center">
              <div class="group">
                <img
                  src="https://images.unsplash.com/photo-1585421514738-01798e348b17?w=800&h=600&fit=crop&auto=format&q=80"
                  alt="Professional cleaning supplies and eco-friendly products arranged neatly showcasing wellness-grade cleaning protocols"
                  class="w-full h-72 md:h-80 object-cover rounded-xl border-2 border-gold/30 shadow-2xl transform transition-all duration-500 group-hover:scale-105 group-hover:shadow-gold/20"
                  loading="lazy"
                />
              </div>
            
              <div class="space-y-4 md:space-y-6">
                <div class="flex items-center gap-3 mb-4">
                  <div class="p-2 md:p-3 bg-gold/20 rounded-full">
                    <i class="fas fa-leaf text-gold text-xl md:text-2xl"></i>
                  </div>
                  <h3 class="text-white text-2xl md:text-3xl lg:text-4xl font-serif font-semibold">
                    Wellness Cleaning Protocols
                  </h3>
                </div>
                <p class="text-white/90 text-base md:text-lg lg:text-xl leading-relaxed font-light">
                  We screen products for skin-sensitivity, indoor air quality, and
                  surface compatibility. Our methods respect stone, brass, and
                  specialty finishes while delivering pristine results.
                </p>
                <ul class="mt-6 space-y-3 text-white/85">
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Finish-safe chemistry and tools</span>
                  </li>
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">HEPA filtration for allergen control</span>
                  </li>
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Evidence-based disinfection on high-touch points</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      
        <!-- Block 2: Concierge Care - Medium Navy -->
        <div class="py-16 md:py-20 bg-gradient-to-br from-night via-navy/80 to-navy/60 relative">
          <div class="absolute inset-0 bg-gradient-to-l from-navy/40 to-transparent"></div>
          <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-8 lg:gap-12 items-center">
              <div class="md:order-2 group">
                <img
                  src="https://images.unsplash.com/photo-1527515637462-cff94eecc1ac?w=800&h=600&fit=crop&auto=format&q=80"
                  alt="Professional cleaning staff member in uniform providing discreet, concierge-level service in an elegant home"
                  class="w-full h-72 md:h-80 object-cover rounded-xl border-2 border-gold/30 shadow-2xl transform transition-all duration-500 group-hover:scale-105 group-hover:shadow-gold/20"
                  loading="lazy"
                />
              </div>
              <div class="md:order-1 space-y-4 md:space-y-6">
                <div class="flex items-center gap-3 mb-4">
                  <div class="p-2 md:p-3 bg-gold/20 rounded-full">
                    <i class="fas fa-concierge-bell text-gold text-xl md:text-2xl"></i>
                  </div>
                  <h3 class="text-white text-2xl md:text-3xl lg:text-4xl font-serif font-semibold">
                    Concierge-Level Care
                  </h3>
                </div>
                <p class="text-white/90 text-base md:text-lg lg:text-xl leading-relaxed font-light">
                  Discreet key‑holding, seamless scheduling, and proactive
                  communication. We adapt to your rhythms and protect your time.
                </p>
                <ul class="mt-6 space-y-3 text-white/85">
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Dedicated point of contact</span>
                  </li>
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Quiet, respectful on-site etiquette</span>
                  </li>
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Photo handover and aftercare notes</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Block 3: Technical Consulting - Light Navy/Slate -->
        <div class="py-16 md:py-20 bg-gradient-to-br from-navy/50 via-slate-700 to-slate-600 relative">
          <div class="absolute inset-0 bg-gradient-to-r from-navy/30 to-transparent"></div>
          <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-8 lg:gap-12 items-center">
              <div class="group">
                <img
                  src="https://images.unsplash.com/photo-1565031491910-e57fac031c41?w=800&h=600&fit=crop&auto=format&q=80"
                  alt="Close-up of marble surface being carefully cleaned with Specialised tools showcasing technical expertise"
                  class="w-full h-72 md:h-80 object-cover rounded-xl border-2 border-gold/30 shadow-2xl transform transition-all duration-500 group-hover:scale-105 group-hover:shadow-gold/20"
                  loading="lazy"
                />
              </div>
              <div class="space-y-4 md:space-y-6">
                <div class="flex items-center gap-3 mb-4">
                  <div class="p-2 md:p-3 bg-gold/20 rounded-full">
                    <i class="fas fa-tools text-gold text-xl md:text-2xl"></i>
                  </div>
                  <h3 class="text-white text-2xl md:text-3xl lg:text-4xl font-serif font-semibold">
                    Technical Consulting
                  </h3>
                </div>
                <p class="text-white/90 text-base md:text-lg lg:text-xl leading-relaxed font-light">
                  From marble etching to protective finishes, we advise on the
                  safest approach and maintenance cadence for your materials.
                </p>
                <ul class="mt-6 space-y-3 text-white/85">
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Stone, metal, and wood care guidance</span>
                  </li>
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Product compatibility checks</span>
                  </li>
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Custom maintenance plans</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Block 4: Emotional Outcomes - Lightest Navy/Gray -->
        <div class="py-16 md:py-20 bg-gradient-to-br from-slate-600 via-slate-500 to-gray-600 relative">
          <div class="absolute inset-0 bg-gradient-to-l from-slate-500/40 to-transparent"></div>
          <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-8 lg:gap-12 items-center">
              <div class="md:order-2 group">
                <img
                  src="https://images.unsplash.com/photo-1600210492486-724fe5c67fb0?w=800&h=600&fit=crop&auto=format&q=80"
                  alt="Serene, perfectly cleaned living space with natural light creating a calm, peaceful atmosphere"
                  class="w-full h-72 md:h-80 object-cover rounded-xl border-2 border-gold/30 shadow-2xl transform transition-all duration-500 group-hover:scale-105 group-hover:shadow-gold/20"
                  loading="lazy"
                />
              </div>
              <div class="md:order-1 space-y-4 md:space-y-6">
                <div class="flex items-center gap-3 mb-4">
                  <div class="p-2 md:p-3 bg-gold/20 rounded-full">
                    <i class="fas fa-heart text-gold text-xl md:text-2xl"></i>
                  </div>
                  <h3 class="text-white text-2xl md:text-3xl lg:text-4xl font-serif font-semibold">Emotional Outcomes</h3>
                </div>
                <p class="text-white/90 text-base md:text-lg lg:text-xl leading-relaxed font-light">
                  Clients describe a sense of calm and control—spaces that feel
                  lighter, quieter, and ready for living.
                </p>
                <ul class="mt-6 space-y-3 text-white/85">
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Visual clarity and balance</span>
                  </li>
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Subtle fragrance options</span>
                  </li>
                  <li class="flex items-start gap-3 group">
                    <i class="fas fa-check-circle text-gold text-base md:text-lg mt-1 flex-shrink-0 group-hover:scale-110 transition-transform"></i>
                    <span class="text-base md:text-lg">Less effort, more ease at home</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
    </section>

    <!-- 4. Comparative Snapshot -->
    <section class="py-20 md:py-28 bg-white">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-serif text-3xl md:text-4xl text-navy font-semibold">
            Essentials vs Others — At a Glance
          </h2>
          <p class="mt-4 text-ink/70 text-base md:text-lg max-w-2xl mx-auto">
            Clear comparison of our comprehensive service against typical cleaning firms.
          </p>
        </div>

        <div
          class="rounded-2xl border border-gold/50 overflow-hidden bg-navy shadow-soft"
        >
          <div class="overflow-x-auto">
            <div class="min-w-[720px]">
              <!-- Header Row -->
              <div class="grid grid-cols-3 bg-navy border-b border-gold/50">
                <div class="sticky-col p-6 font-semibold text-white text-lg">
                  Service Features
                </div>
                <div class="p-6 text-center text-white font-semibold">HQC Essentials</div>
                <div class="p-6 text-center text-white font-semibold">Typical Firm</div>
              </div>
              
              <!-- Comparison Rows -->
              <div class="grid grid-cols-3 border-b border-gold/30">
                <div class="sticky-col p-4 text-white/90">DBS Background Checks</div>
                <div class="p-4 text-center"><i class="fas fa-check text-gold text-xl"></i></div>
                <div class="p-4 text-center"><i class="fas fa-times text-red-400 text-xl"></i></div>
              </div>
              
              <div class="grid grid-cols-3 border-b border-gold/30 bg-navy/50">
                <div class="sticky-col p-4 text-white/90">£5M Insurance Coverage</div>
                <div class="p-4 text-center"><i class="fas fa-check text-gold text-xl"></i></div>
                <div class="p-4 text-center"><i class="fas fa-times text-red-400 text-xl"></i></div>
              </div>
              
              <div class="grid grid-cols-3 border-b border-gold/30">
                <div class="sticky-col p-4 text-white/90">Surface-Safe Product Selection</div>
                <div class="p-4 text-center"><i class="fas fa-check text-gold text-xl"></i></div>
                <div class="p-4 text-center"><i class="fas fa-times text-red-400 text-xl"></i></div>
              </div>
              
              <div class="grid grid-cols-3 border-b border-gold/30 bg-navy/50">
                <div class="sticky-col p-4 text-white/90">Key Holding Service</div>
                <div class="p-4 text-center"><i class="fas fa-check text-gold text-xl"></i></div>
                <div class="p-4 text-center text-white/60 text-sm">Extra charge</div>
              </div>
              
              <div class="grid grid-cols-3 border-b border-gold/30">
                <div class="sticky-col p-4 text-white/90">Photo Handover Reports</div>
                <div class="p-4 text-center"><i class="fas fa-check text-gold text-xl"></i></div>
                <div class="p-4 text-center"><i class="fas fa-times text-red-400 text-xl"></i></div>
              </div>
              
              <div class="grid grid-cols-3 bg-navy/50">
                <div class="sticky-col p-4 text-white/90">24/7 Support Line</div>
                <div class="p-4 text-center"><i class="fas fa-check text-gold text-xl"></i></div>
                <div class="p-4 text-center text-white/60 text-sm">Business hours</div>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-4 text-sm text-ink/60 text-center">
          <i class="fas fa-check text-gold mr-2"></i>Gold checkmarks indicate standard inclusions; 
          <i class="fas fa-times text-red-400 mx-2"></i>red crosses denote exclusions or additional charges with typical firms.
        </div>
      </div>
    </section>

    <!-- 5. Photo Story Strip -->
    <TransformationGallery />


    <!-- 6. Founder Vision -->
    <section class="py-20 md:py-28 bg-white">
      <div
        class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 grid md:grid-cols-2 gap-16 items-center"
      >
        <div class="flex justify-center">
          <div class="relative">
            <img
              src="/images/pedro.jpg"
              alt="Pedro, founder of High Quality Cleaning, professional portrait in business attire"
              class="w-80 h-96 object-cover rounded-2xl border border-gold/30 shadow-soft"
              loading="lazy"
            />
            <div class="absolute -bottom-4 -right-4 bg-gold rounded-full p-3">
              <i class="fas fa-award text-navy text-xl"></i>
