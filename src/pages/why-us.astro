<style>
  /* Tunables */
  .marquee {
    --speed: 28s;               /* overall cycle duration */
    --gap: 2rem;                /* space between cards */
    --fade: 80px;               /* edge fade width */
    --card-w: 20rem;            /* 320px card width */
    --card-p: 2rem;             /* card padding */
  }

  /* Container with edge fades via mask */
  .marquee {
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent 0,
      #000 var(--fade),
      #000 calc(100% - var(--fade)),
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0,
      #000 var(--fade),
      #000 calc(100% - var(--fade)),
      transparent 100%
    );
  }

  .marquee__inner {
    position: relative;
  }

  /* Track: two copies sliding left in lockstep */
  .marquee__track {
    display: flex;
    align-items: stretch;
    gap: var(--gap);
    padding-block: .25rem;
    will-change: transform;
    animation: marquee var(--speed) linear infinite;
  }

  /* Second track starts immediately after the first */
  .marquee__track + .marquee__track {
    position: absolute;
    inset: 0;
    transform: translateX(100%);
    animation-name: marquee-follow;
    animation-duration: var(--speed);
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }

  /* Pause on hover/focus within */
  .group:hover .marquee__track,
  .group:focus-within .marquee__track {
    animation-play-state: paused;
  }

  /* Items & cards */
  .marquee__item {
    flex: 0 0 auto;
    width: var(--card-w);
  }
  .card {
    display: block;
    background: #fff;
    border-radius: .875rem; /* ~14px */
    padding: var(--card-p);
    text-align: center;
    border: 1px solid rgba(212, 175, 55, 0.25); /* gold/25 */
    box-shadow: 0 6px 20px rgba(0,0,0,.08);
    transition: box-shadow .2s ease, transform .2s ease;
  }
  .card:hover { transform: translateY(-2px); box-shadow: 0 10px 24px rgba(0,0,0,.12); }
  .logo { display:block; margin-inline:auto; height: 80px; width:auto; object-fit: contain; }
  .title { font-family: ui-serif, Georgia, "Times New Roman", serif; font-size: 1.125rem; color: #0f1a2a; margin: .75rem 0  .5rem; }
  .copy { font-size: .875rem; color: #4b5563; line-height: 1.5; }

  /* Keyframes: classic marquee technique */
  @keyframes marquee {
    from { transform: translateX(0); }
    to   { transform: translateX(-100%); }
  }
  @keyframes marquee-follow {
    from { transform: translateX(100%); }
    to   { transform: translateX(0%); }
  }

  /* Responsiveness: slower on small screens, faster on desktop */
  @media (min-width: 768px) {
    .marquee { --speed: 72s; }
  }
  @media (min-width: 1280px) {
    .marquee { --speed: 18s; }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .marquee__track { animation: none; }
  }
</style>
