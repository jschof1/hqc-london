    //   autoPlayInterval = setInterval(() => {
    //     if (currentSlide === totalSlides - 1) {
    //       goToSlide(0);
    //     } else {
    //       nextSlide();
    //     }
    //   }, 8000);
    // });

    // Initialize carousel
    updateCarousel();
  }
});
