---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import { siteSettings } from '../data/site-settings.js';
---

<Layout 
  title="Contact Us | High Quality Clean"
  description="Get in touch with High Quality Clean. Contact us via phone, email, WhatsApp, or use our contact form. We're here to help with your luxury home cleaning needs."
>
  <Header />
  
  <main class="page-transition pt-16">
    <!-- Hero Section -->
    <HeroSection 
      title="Get in Touch"
      subtitle="We're here to answer your questions and discuss how we can help maintain your home to the highest standards."
      imageSrc="https://images.unsplash.com/photo-1585421514738-01798e348b17?w=1600&h=900&fit=crop&auto=format&q=80"
      imageAlt="Professional cleaning service team ready to help with luxury home cleaning"
      primaryCta={{
        text: "Request a Quote",
        href: "/#quote"
      }}
      secondaryCta={{
        text: "Message on WhatsApp", 
        href: "https://wa.me/+447824390336",
        icon: "fab fa-whatsapp",
        target: "_blank",
        rel: "noopener nofollow"
      }}
      trustBadges={[
        { icon: "fas fa-shield-alt", text: "£5M Insurance" },
        { icon: "fas fa-id-card", text: "100% DBS-checked" },
        { icon: "fas fa-star", text: "Five‑Star Average" }
      ]}
      backgroundClass="bg-navy relative overflow-hidden"
    />

    <!-- Contact Information Cards -->
    <section class="py-20 md:py-28 bg-mist">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-serif text-3xl md:text-4xl text-navy font-semibold mb-4">
            How to Reach Us
          </h2>
          <p class="text-ink/70 text-lg max-w-2xl mx-auto">
            Choose the method that works best for you. Our team is ready to assist with your cleaning needs.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
          <!-- Phone Card -->
          <div class="bg-white rounded-xl border border-gold/30 p-6 shadow-soft-sm hover:shadow-soft transition-all duration-300 hover:-translate-y-1">
            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-gold/10 mb-4">
              <i class="fas fa-phone text-gold text-xl"></i>
            </div>
            <h3 class="font-semibold text-navy mb-2">Phone</h3>
            <p class="text-sm text-ink/70 mb-4">Call us directly</p>
            <a 
              href="tel:+442033425260" 
              class="text-gold hover:text-navy transition-colors font-medium"
            >
              0203 342 5260
            </a>
          </div>

          <!-- Email Card -->
          <div class="bg-white rounded-xl border border-gold/30 p-6 shadow-soft-sm hover:shadow-soft transition-all duration-300 hover:-translate-y-1">
            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-gold/10 mb-4">
              <i class="fas fa-envelope text-gold text-xl"></i>
            </div>
            <h3 class="font-semibold text-navy mb-2">Email</h3>
            <p class="text-sm text-ink/70 mb-4">Send us a message</p>
            <a 
              href="mailto:sales@highqualityclean.co.uk" 
              class="text-gold hover:text-navy transition-colors font-medium break-all"
            >
              sales@highqualityclean.co.uk
            </a>
          </div>

          <!-- WhatsApp Card -->
          <div class="bg-white rounded-xl border border-gold/30 p-6 shadow-soft-sm hover:shadow-soft transition-all duration-300 hover:-translate-y-1">
            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-gold/10 mb-4">
              <svg class="w-6 h-6 text-gold" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.787"/>
              </svg>
            </div>
            <h3 class="font-semibold text-navy mb-2">WhatsApp</h3>
            <p class="text-sm text-ink/70 mb-4">Chat with us</p>
            <a 
              href="https://wa.me/+447824390336" 
              target="_blank"
              rel="noopener nofollow"
              class="text-gold hover:text-navy transition-colors font-medium"
            >
              Start a conversation
            </a>
          </div>

          <!-- Address Card -->
          <div class="bg-white rounded-xl border border-gold/30 p-6 shadow-soft-sm hover:shadow-soft transition-all duration-300 hover:-translate-y-1">
            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-gold/10 mb-4">
              <i class="fas fa-map-marker-alt text-gold text-xl"></i>
            </div>
            <h3 class="font-semibold text-navy mb-2">Location</h3>
            <p class="text-sm text-ink/70 mb-4">Service area</p>
            <p class="text-gold font-medium">
              London, SW1<br />
              Greater London
            </p>
          </div>
        </div>

        <!-- Social Media Links -->
        <div class="text-center">
          <p class="text-ink/70 mb-4">Follow us on social media</p>
          <div class="flex items-center justify-center gap-4">
            <a 
              href="https://www.instagram.com/highqualitycleanltd" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="w-12 h-12 rounded-full bg-white border border-gold/30 flex items-center justify-center text-ink/60 hover:text-gold hover:border-gold transition-all duration-300 hover:-translate-y-1"
              aria-label="Instagram"
            >
              <i class="fab fa-instagram text-xl"></i>
            </a>
            <a 
              href="https://www.linkedin.com/company/high-quality-cleaning/" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="w-12 h-12 rounded-full bg-white border border-gold/30 flex items-center justify-center text-ink/60 hover:text-gold hover:border-gold transition-all duration-300 hover:-translate-y-1"
              aria-label="LinkedIn"
            >
              <i class="fab fa-linkedin text-xl"></i>
            </a>
            <a 
              href="https://tiktok.com/@highqualityclean" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="w-12 h-12 rounded-full bg-white border border-gold/30 flex items-center justify-center text-ink/60 hover:text-gold hover:border-gold transition-all duration-300 hover:-translate-y-1"
              aria-label="TikTok"
            >
              <i class="fab fa-tiktok text-xl"></i>
            </a>
            <a 
              href="https://www.facebook.com/highqualityclean" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="w-12 h-12 rounded-full bg-white border border-gold/30 flex items-center justify-center text-ink/60 hover:text-gold hover:border-gold transition-all duration-300 hover:-translate-y-1"
              aria-label="Facebook"
            >
              <i class="fab fa-facebook text-xl"></i>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-20 md:py-28 bg-white">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-serif text-3xl md:text-4xl text-navy font-semibold mb-4">
            Send Us a Message
          </h2>
          <p class="text-ink/70 text-lg">
            Fill out the form below and we'll get back to you as soon as possible.
          </p>
        </div>

        <form
          id="contact-form"
          class="bg-mist rounded-2xl p-8 md:p-10 border border-gold/50 shadow-soft transition-all duration-300"
        >
          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <label class="block">
              <span class="block mb-2 text-navy font-medium">Full Name *</span>
              <input
                type="text"
                name="name"
                required
                class="w-full rounded-lg px-4 py-3 bg-white border border-gold/30 text-navy placeholder:text-navy/40 focus:border-gold focus:ring-gold focus:ring-1 transition-colors"
                placeholder="Your full name"
              />
            </label>
            <label class="block">
              <span class="block mb-2 text-navy font-medium">Email Address *</span>
              <input
                type="email"
                name="email"
                required
                class="w-full rounded-lg px-4 py-3 bg-white border border-gold/30 text-navy placeholder:text-navy/40 focus:border-gold focus:ring-gold focus:ring-1 transition-colors"
                placeholder="your.email@example.com"
              />
            </label>
          </div>
          
          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <label class="block">
              <span class="block mb-2 text-navy font-medium">Phone Number</span>
              <input
                type="tel"
                name="phone"
                class="w-full rounded-lg px-4 py-3 bg-white border border-gold/30 text-navy placeholder:text-navy/40 focus:border-gold focus:ring-gold focus:ring-1 transition-colors"
                placeholder="020 3342 5260"
              />
            </label>
            <label class="block">
              <span class="block mb-2 text-navy font-medium">Postcode</span>
              <input
                type="text"
                name="postcode"
                class="w-full rounded-lg px-4 py-3 bg-white border border-gold/30 text-navy placeholder:text-navy/40 focus:border-gold focus:ring-gold focus:ring-1 transition-colors"
                placeholder="SW1, W8, etc."
              />
            </label>
          </div>

          <label class="block mb-6">
            <span class="block mb-2 text-navy font-medium">How can we help? *</span>
            <select
              name="service"
              required
              class="w-full rounded-lg px-4 py-3 bg-white border border-gold/30 text-navy focus:border-gold focus:ring-gold focus:ring-1 transition-colors"
            >
              <option value="">Select a topic...</option>
              <option value="general-inquiry">General Inquiry</option>
              <option value="quote-request">Request a Quote</option>
              <option value="existing-client">Existing Client Support</option>
              <option value="partnership">Partnership Opportunity</option>
              <option value="other">Other</option>
            </select>
          </label>
          
          <label class="block mb-8">
            <span class="block mb-2 text-navy font-medium">Message *</span>
            <textarea
              name="message"
              rows="6"
              required
              class="w-full rounded-lg px-4 py-3 bg-white border border-gold/30 text-navy placeholder:text-navy/40 focus:border-gold focus:ring-gold focus:ring-1 transition-colors resize-none"
              placeholder="Tell us about your cleaning needs, questions, or how we can assist you..."
            ></textarea>
          </label>
          
          <div class="flex flex-col lg:flex-row lg:items-center gap-6 lg:justify-between">
            <label class="inline-flex items-start gap-3 text-sm text-navy/80 max-w-md">
              <input type="checkbox" required class="mt-1 accent-gold scale-110" />
              <span>I agree to be contacted by High Quality Clean regarding my inquiry.</span>
            </label>
            <button
              type="submit"
              class="inline-flex items-center justify-center rounded-md bg-gold text-navy px-8 py-4 font-semibold border border-gold hover:bg-gold/90 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 min-h-[48px]"
            >
              <i class="fas fa-paper-plane mr-2"></i>
              Send Message
            </button>
          </div>
        </form>

        <div id="contact-success" class="hidden bg-mist rounded-2xl p-12 text-center border border-gold/50 shadow-soft animate-fade-in">
          <div class="w-20 h-20 bg-gold/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-check text-gold text-4xl"></i>
          </div>
          <h3 class="font-serif text-3xl font-bold text-navy mb-4">Message Sent</h3>
          <p class="text-ink/70 text-lg mb-8">
            Thank you for reaching out. We've received your message and our team will get back to you as soon as possible.
          </p>
          <button 
            onclick="window.location.reload()" 
            class="text-gold hover:text-navy transition-colors font-semibold"
          >
            Send another message
          </button>
        </div>

        <script define:vars={{ webhookUrl: siteSettings.quickFormWebhook }}>
          const form = document.getElementById('contact-form');
          const successMessage = document.getElementById('contact-success');
          const submitBtn = form?.querySelector('button[type="submit"]');
          const originalBtnText = submitBtn?.innerHTML;

          form?.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (submitBtn) {
              submitBtn.disabled = true;
              submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Sending...';
            }

            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            
            data.source = 'contact_page';
            data.timestamp = new Date().toISOString();

            try {
              const response = await fetch(webhookUrl, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
              });

              if (response.ok) {
                form.style.display = 'none';
                successMessage.classList.remove('hidden');
                successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
              } else {
                throw new Error('Submission failed');
              }
            } catch (error) {
              console.error('Error submitting form:', error);
              alert('Something went wrong. Please try again or call us directly at 020 3342 5260.');
              
              if (submitBtn) {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalBtnText;
              }
            }
          });
        </script>
      </div>
    </section>

    <!-- Business Hours Section -->
    <section class="py-20 md:py-28 bg-navy">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-serif text-3xl md:text-4xl text-white font-semibold mb-4">
            Business Hours
          </h2>
          <p class="text-white/80 text-lg">
            Our team is available to assist you during these hours
          </p>
        </div>

        <div class="bg-white/10 backdrop-blur border border-gold/30 rounded-2xl p-8 md:p-10">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-gold font-semibold text-lg mb-4 flex items-center gap-2">
                <i class="fas fa-clock"></i>
                Office Hours
              </h3>
              <ul class="space-y-3 text-white/90">
                <li class="flex justify-between">
                  <span>Monday - Friday</span>
                  <span class="font-medium">9:00 AM - 6:00 PM</span>
                </li>
                <li class="flex justify-between">
                  <span>Saturday</span>
                  <span class="font-medium">10:00 AM - 4:00 PM</span>
                </li>
                <li class="flex justify-between">
                  <span>Sunday</span>
                  <span class="font-medium">Closed</span>
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-gold font-semibold text-lg mb-4 flex items-center gap-2">
                <i class="fas fa-headset"></i>
                Emergency Support
              </h3>
              <p class="text-white/90 mb-4">
                For urgent matters outside business hours, please leave a message and we'll respond as soon as possible.
              </p>
              <div class="flex items-center gap-2 text-gold">
                <i class="fas fa-info-circle"></i>
                <span class="text-sm">Average response time: 24-48 hours</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

