---
export interface Props {
  href: string;
  className?: string;
  textHoverClass?: string;
  iconClass?: string;
  icon?: boolean;
}

const {
  href,
  className = "",
  textHoverClass = "hover:bg-gold/90",
  iconClass = "ml-2 w-4 h-4",
  icon = true,
} = Astro.props;
---

<a
  href={href}
  class={`inline-flex items-center px-6 py-3 bg-gold text-navy font-semibold rounded-xl transition-all duration-300 ${textHoverClass} ${className}`.trim()}
>
  <slot />
  {icon && (
    <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
    </svg>
  )}
</a>

